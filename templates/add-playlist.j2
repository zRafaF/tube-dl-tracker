{% extends 'base.j2' %} {% block before_content %} {% if playlist is defined %}
<div class="d-md-flex justify-content-between">
	<div class="container-sm">
		<h2 class="fw-semibold fs-2 mx-auto mb-6">{{ playlist.title }}</h2>

		<a href="{{ playlist.url }}">
			<img src="{{ playlist.thumbnails[0].url }}" alt="thumbnail" />
		</a>

		<form>
			<div class="row mb-3">
				<label for="inputEmail3" class="col-sm-2 col-form-label"
					>Target quality</label
				>
				<div class="col-sm-3">
					<select
						class="form-select"
						aria-label="Default select example"
					>
						<option value="1">360p</option>
						<option value="1">480p</option>
						<option selected>720p</option>
						<option value="1">1080p</option>
						<option value="1">1440p</option>
						<option value="1">2160p</option>
					</select>
					<div id="passwordHelpBlock" class="form-text">
						Maximum download quality.
					</div>
				</div>
			</div>
			<div class="row mb-3">
				<label for="inputEmail3" class="col-sm-2 col-form-label"
					>Tracking</label
				>
				<div class="col-sm-3">
					<select
						class="form-select"
						aria-label="Default select example"
					>
						<option selected>Enabled</option>
						<option value="1">Disabled</option>
					</select>
					<div id="passwordHelpBlock" class="form-text">
						Automated download of new entries.
					</div>
				</div>
			</div>

			<button type="submit" class="btn btn-primary">Sign in</button>
		</form>
	</div>

	<div class="bg-dark-subtle">
		<div class="p-3 pb-0">
			<h4 class="fw-semibold">
				Found: {{ playlist.videos | length }} videos
			</h4>
		</div>
		<div class="d-flex gap-3 p-3 flex-row flex-md-column overflow-auto">
			{% for video in playlist.videos %}
			<a href="{{ video.url }}" target="_blank">
				<div style="min-width: 200px; width: 200px">
					<div class="card h-100">
						<img
							src="{{ video.thumbnails[0].url }}"
							class="card-img-top img-fluid bg-black"
							alt="thumbnail"
							style="object-fit: contain; max-height: 120px"
						/>
						<div
							class="card-body p-3 d-inline-block text-truncate w-100"
						>
							<h6 class="text-truncate">{{ video.title }}</h6>

							<h6 class="mb-0 text-truncate">
								{{ video.uploader }}
							</h6>
							<span class="text-muted text-truncate"
								>September 14, 2022</span
							>
						</div>
					</div>
				</div>
			</a>

			{% endfor %}
		</div>
	</div>
</div>
{% else %}
<h1>ERROR: Playlist is not defined.</h1>
{% endif %} {% endblock %}
