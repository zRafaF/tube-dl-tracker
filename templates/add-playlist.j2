{% extends 'base.j2' %} {% block content %} {% if playlist is defined %}
<form>
	<div class="card grid overflow-auto" style="height: 80dvh">
		<div class="d-lg-flex justify-content-between">
			<div class="d-flex flex-column p-3 p-md-4 w-100">
				<h2 class="fw-semibold fs-2 mx-auto mb-2">
					{{ playlist.title }}
				</h2>
				<div class="d-flex flex-column flex-sm-row w-100 gap-3">
					<a href="{{ playlist.url }}" class="w-100 w-sm-50 d-flex">
						<img
							src="{{ playlist.thumbnails[0].url }}"
							class="img-fluid mx-auto mx-sm-0"
							alt="thumbnail"
							style="object-fit: contain"
						/>
					</a>
					<div class="w-100 w-sm-75">
						<div class="row mb-4 mx-auto">
							<label
								for="inputEmail3"
								class="col-sm-2 col-form-label px-0"
								style="width: 35%"
								>Target quality</label
							>
							<div class="col-sm-3 pe-0" style="width: 65%">
								<select
									class="form-select"
									aria-label="Default select example"
								>
									<option value="1">360p</option>
									<option value="1">480p</option>
									<option selected>720p</option>
									<option value="1">1080p</option>
									<option value="1">1440p</option>
									<option value="1">2160p</option>
								</select>
								<div id="passwordHelpBlock" class="form-text">
									Maximum download quality.
								</div>
							</div>
						</div>
						<div class="row mb-4 mx-auto">
							<label
								for="inputEmail3"
								class="col-sm-2 col-form-label px-0"
								style="width: 35%"
								>Tracking</label
							>
							<div class="col-sm-3 pe-0" style="width: 65%">
								<select
									class="form-select"
									aria-label="Default select example"
								>
									<option selected>Enabled</option>
									<option value="1">Disabled</option>
								</select>
								<div id="passwordHelpBlock" class="form-text">
									Automated download of new entries.
								</div>
							</div>
						</div>
						<div class="d-flex w-100">
							<div class="d-flex mx-auto gap-4">
								<button class="btn btn-outline-secondary">
									Cancel
								</button>
								<button type="submit" class="btn btn-primary">
									Accept
								</button>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div
				class="bg-dark-subtle min-h-sm-100"
				style="min-height: calc(80dvh - 2px)"
			>
				<div class="p-3 pb-0">
					<h4 class="fw-semibold">
						Found: {{ playlist.videos | length }} videos
					</h4>
				</div>
				<div
					class="d-flex gap-3 p-3 flex-row flex-lg-column overflow-auto"
				>
					{% for video in playlist.videos %}
					<a href="{{ video.url }}" target="_blank">
						<div style="min-width: 200px; width: 200px">
							<div class="card">
								<img
									src="{{ video.thumbnails[0].url }}"
									class="card-img-top img-fluid bg-black"
									alt="thumbnail"
									style="
										object-fit: contain;
										max-height: 120px;
									"
								/>
								<div
									class="card-body p-3 d-inline-block text-truncate w-100"
								>
									<h6 class="text-truncate">
										{{ video.title }}
									</h6>

									<h6 class="mb-0 text-truncate">
										{{ video.uploader }}
									</h6>
									<span class="text-muted text-truncate"
										>September 14, 2022</span
									>
								</div>
							</div>
						</div>
					</a>

					{% endfor %}
				</div>
			</div>
		</div>
	</div>
</form>
{% else %}
<h1>ERROR: Playlist is not defined.</h1>
{% endif %} {% endblock %}
