<html data-bs-theme="dark">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{{ title }}</title>
		<link
			href="{{ url_for('static', path='/styles.css') }}"
			rel="stylesheet"
		/>
		<link
			rel="stylesheet"
			href="{{ url_for('static', path='/fastbootstrap-2.2.0/css/fastbootstrap.min.css') }}"
		/>
		{% if globals.base_url %}
		<base href="{{ globals.base_url }}" />
		{% endif %}
	</head>

	<body>
		{% include 'header.j2' %}
		<div class="container-md pt-3">{% block content %}{% endblock %}</div>
		{% include 'sections/messagetoast.j2' %}
		<script src="{{ url_for('static', path='/javascript.js') }}"></script>
	</body>
</html>
